<script>
    require([
        'jquery',
        "underscore",
        'collapsible', "domReady!"], function ($, _) {
            "use strict";

            let elseBlock=false;
            function collapsibleForMobile() {
                // can initialize with options only once, hence the elseBlock logic
                if ($(window).width() < 768) {
                    $(".footerCollapsible").collapsible({animate:{duration:500, easing:"swing"}, openedState:"active"});
                    if(elseBlock) {
                        $(".footerCollapsible").collapsible("enable");
                    }
                    $(".footerCollapsible").collapsible("forceDeactivate");
                    
                }   else {
                    elseBlock=true;
                    $(".footerCollapsible").collapsible({animate:{duration:500, easing:"swing"}, openedState:"active"});
                    $(".footerCollapsible").collapsible("disable");
                    $(".footer.content [data-role=content]").each((_,item)=>{
                        $(item).show();
                    })

                }
            }
           
            collapsibleForMobile()

            
                $(window).on("resize",
                _.debounce(collapsibleForMobile, 300)
                );
          
            
    });
</script>